<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/telalogin"
    android:backgroundTint="@color/telalogin"
    android:orientation="vertical"
    tools:context=".VitoriaActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        app:srcCompat="@drawable/huntergologo" />

    <TextView
        android:id="@+id/txt_success"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:text="Sucesso!"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/loot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/loot2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_up"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:text="Por favor escolha um status para upar!"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Ataque"
                android:textAlignment="textEnd"
                android:textColor="@color/branco"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Defesa"
                android:textAlignment="textEnd"
                android:textColor="@color/branco"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Poder MÃ¡gico"
                android:textAlignment="textEnd"
                android:textColor="@color/branco"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/up_atk"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/botaopopup"
                android:onClick="upatk"
                android:text="+"
                android:textColor="@color/branco" />

            <Button
                android:id="@+id/up_def"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/botaopopup"
                android:onClick="updef"
                android:text="+"
                android:textColor="@color/branco" />

            <Button
                android:id="@+id/upp_spatk"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@color/botaopopup"
                android:onClick="upspatk"
                android:text="+"
                android:textColor="@color/branco" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>